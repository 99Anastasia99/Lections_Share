<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
  <div class="row" style="margin-top:20px; margin-left:350px">
      <fieldset>
        <h1 style="text-align:center"><%= t('common.sign_up') %></h1>
        <hr class="colorgraph">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <div class="social-buttons">
            <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),class: "btn btn-outline-primary"  %><br />
            <% end -%>
            <% end -%>
          </div>
        <br> <%= f.text_field :username, class: 'form-control input-lg', autocomplete: "username",placeholder:  t('activerecord.attributes.user.username') %> </br>
       <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', autocomplete: "email",placeholder:  t('activerecord.attributes.user.email') %>
        </div>

        <div class="form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length.to_s +  t('home.minimum') %>)</em>
          <% end %><br />
          <%= f.password_field :password,class: 'form-control input-lg', autocomplete: "new-password",placeholder:  t('activerecord.attributes.user.password') %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation,class: 'form-control input-lg', autocomplete: "new-password", placeholder: t('activerecord.attributes.user.password_confirmation') %>
        </div>
        <hr class="colorgraph">
        <div class="row">
          <%= f.submit "Sign up", class: 'btn btn-lg btn-success btn-block' %>
        </div>
        <% end %>
        <hr>
        <hr>
    </div>
