<div class="container" style="margin-left: auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div class="col-md-9">
  <%= devise_error_messages! %>
  <div class="form-inputs">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p><%= t('edit.confirmation') + resource.unconfirmed_email %></p>
    <% end %>
    <div class="form-group">
      <%= f.email_field :email,required: true, autofocus: true, class: 'form-control input-lg', autocomplete: "email",placeholder: t('activerecord.attributes.user.email') %>
    </div>

    <div class="form-group">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length.to_s + t('home.minimum')%> )</em>
      <% end %><br />
      <%= f.password_field :password,required: true,class: 'form-control input-lg', autocomplete: "new-password",placeholder: t('activerecord.attributes.user.password') %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation,required: true,class: 'form-control input-lg', autocomplete: "new-password", placeholder: t('activerecord.attributes.user.password_confirmation') %>
    </div>
    <div class="form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password,required: true,class: 'form-control input-lg', autocomplete: "new-password", placeholder: t('activerecord.attributes.user.current_password')%>
    </div>

  </div>
  <div class="form-actions">
    <div class="row">
    <%= f.submit t('common.update'), class: "btn btn-outline-info" %>
    </div>
  </div>
  <% end %>
  </div>
</div>
