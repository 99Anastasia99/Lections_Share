      <% end %>
              <div id="sort_results" date-rome>
          <%= render 'users/lections_list' %>
        </div>
    </div>
  </div>
  <div class="col-md-3">
    <% if current_user == @user %>
    <%= render 'users/edit_widget'  %>
    <% end %>
    <div> <%= render 'users/info_widget' %> </div>
    </div>
</div>
